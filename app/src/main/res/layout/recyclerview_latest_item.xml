<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:foreground="?attr/selectableItemBackground"
    card:cardBackgroundColor="@color/smokeGray"
    card:cardCornerRadius="5dp"
    card:cardElevation="5dp"
    card:contentPadding="3dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="5dp"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/latest_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/medic"
        />
      <TextView
          android:paddingLeft="10dp"
          android:id="@+id/latest_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="3"
          android:textColor="@android:color/black"
          android:textSize="19sp"
          android:text="读读日报 24 小时热门 TOP 5 · 「这是国家交给我们的任务」，造神水当网红"
          />
  </LinearLayout>
</android.support.v7.widget.CardView>